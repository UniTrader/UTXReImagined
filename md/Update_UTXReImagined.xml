<?xml version="1.0" encoding="UTF-8"?>
<mdscript xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="Update_UTXReImagined" xsi:noNamespaceSchemaLocation="http://utnas/~unitrader/XRebirthxsds/md.xsd">
  <cues>
    <cue name="Init">
      <actions>
        <set_value name="global.$UTXReImagined_version" exact="1"/>
      </actions>
    </cue>
    <cue name="Update_Procedure">
      <conditions>
        <event_game_loaded/>
      </conditions>
      <actions>
        
        <!-- just an Example for the Syntax to Copy in the future -->
        <!-- update if Save Version is less than current Version 1 -->
        <do_if value="global.$UTXReImagined_version lt 1">
          <patch_macros macro="macro.your_changed_macro"/>
          
          <!-- set Version stored in Save to current Version (when adding Update Actions move to last Version to which Updates are necesary) -->
          <set_value name="global.$UTXReImagined_version" exact="1"/>
        </do_if>
        
        <!-- reset cue for further Patching Actions in the future -->
        <reset_cue cue="this"/>
      </actions>
    </cue>
  </cues>
</mdscript>
